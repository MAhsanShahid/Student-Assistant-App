<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/main">

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp"
        android:prompt="@string/sc"
        android:theme="@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:prompt="@string/ss"
        android:theme="@style/Base.Animation.AppCompat.DropDownUp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:text="Done"
        android:id="@+id/button5"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/spinner2"
        android:layout_marginTop="90dp"
        android:textSize="15dp"
        android:typeface="serif"
        android:onClick="crDone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select Course:"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:textColor="#ffffff"
        android:layout_marginLeft="20dp"
        android:typeface="serif" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select Section:"
        android:id="@+id/textView3"
        android:textColor="#ffffff"
        android:layout_above="@+id/spinner2"
        android:layout_alignStart="@+id/textView2"
        android:typeface="serif" />


</RelativeLayout>