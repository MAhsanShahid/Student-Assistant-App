<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main">

    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/un"
        android:layout_marginLeft="30dp"
        android:hint=" Username"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:inputType="textEmailAddress"
        android:nextFocusDown="@+id/pss"
        android:textSize="20dp"
        android:textColor="#ffffff" />

    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/pss"
        android:layout_marginLeft="30dp"
        android:hint=" Password"
        android:layout_below="@+id/un"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:inputType="textPassword"
        android:textSize="20dp"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:text="Login"
        android:id="@+id/button3"
        android:onClick="lg_click"

        android:layout_below="@+id/error"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:typeface="serif" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Invalid Username or Password!"
        android:id="@+id/error"
        android:layout_centerVertical="true"
        android:layout_below="@+id/pss"
        android:layout_marginLeft="20dp"
        android:textColor="#ef2525"
        android:textSize="23dp"
        android:layout_alignEnd="@+id/pss"
        android:typeface="serif"
        android:visibility="invisible" />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp" />

</RelativeLayout>
